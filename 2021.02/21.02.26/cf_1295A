#include <iostream>
using namespace std;

int main() {
	ios_base::sync_with_stdio(0);
	cin.tie(0);
	cout.tie(0);

	int t, n;
	cin >> t;
	while (t) {
		t--;
		cin >> n;
		if (n / 2 > 0) {
			if (n % 2 == 0) {
				for (int i = 1; i <= n / 2; i++) {
					cout << 1;
				}
			}
			else {
				cout << 7;
				for (int i = 1; i <= n / 2 - 1; i++) {
					cout << 1;
				}
			}
		}
		cout << endl;
	}
}
